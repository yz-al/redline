        {
            "name": "Redlining",
            "item": [
                {
                    "name": "Redline by Range",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"documents\": [\n    {\n      \"document_id\": \"{{document_id}}\",\n      \"range\": {\n        \"start\": 10,\n        \"end\": 15\n      },\n      \"replacement\": \"amended\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/documents/redline/range",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "documents",
                                "redline",
                                "range"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Redline by Target",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"documents\": [\n    {\n      \"document_id\": \"{{document_id}}\",\n      \"target_text\": \"agreement\",\n      \"occurrence\": 1,\n      \"replacement\": \"contract\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/documents/redline/target",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "documents",
